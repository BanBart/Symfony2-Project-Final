{% extends 'ProjectLineOfWorkBundle::layout.html.twig' %}

{% block main %}
    <div class="col-lg-8 col-lg-offset-2 body-header">
            <h2>Job</h2>
    </div>
    <div class="col-lg-8 col-lg-offset-2">
        <div class="row">          
            <div class="col-lg-12">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Type</th>
                            <td>{{ entity.type }}</td>
                        </tr>
                        <tr>
                            <th>Company</th>
                            <td>{{ entity.company }}</td>
                        </tr>
                        <tr>
                            <th>Logo</th>
                            <td>{{ entity.logo }}</td>
                        </tr>
                        <tr>
                            <th>Url</th>
                            <td>{{ entity.url }}</td>
                        </tr>
                        <tr>
                            <th>Position</th>
                            <td>{{ entity.position }}</td>
                        </tr>
                        <tr>
                            <th>Location</th>
                            <td>{{ entity.location }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ entity.description }}</td>
                        </tr>
                        <tr>
                            <th>How_to_apply</th>
                            <td>{{ entity.howtoapply }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ entity.email }}</td>
                        </tr>
                        <tr>
                            <th>Created_at</th>
                            <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-lg-2">
                <form action="{{ app.request.headers.get('referer') }}">
                    <button type='submit' class='btn custom-button'>Back</button>
                </form>
            </div>
            <div class="col-lg-2 col-lg-2 col-lg-offset-8">
                <form action="#">
                    <button type='submit' class='btn custom-button pull-right'>Apply</button>
                </form>
            </div>
            
        </div>
        
    </div>  
{% endblock %}